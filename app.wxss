@import "./iconfont/iconfont.wxss";
@import "nocontent.wxss";
@import "./component/request-loading/loading.wxss";

page {
  height: 100%;
  background-color: #F0F0F0;
}

.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  background-color: #F0F0F0;
  box-sizing: border-box;
} 

.subject-color {
  color: #B64A48 !important;
}

.subject-bg-color {
  background-color: #B64A48 !important;
}

button {
  border-radius: 0;
}

button::after {
  border-radius: 0;
  border: none;
}

.hover-button {
  opacity: 0.8;
}