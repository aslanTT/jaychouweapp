.message-cell {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: flex-start;
  padding-top: 24rpx;
}

.my-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-end;
  margin-right: 20rpx;
}

.partner-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-left: 20rpx;
}

.content-view {
  padding: 20rpx;
  max-width: 70vw;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.image-view {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.partner-eyes {
  background-color: #ffffff;
  color: #383838;
  text-align: left;
}

.my-eyes {
  background-color: rgb(43, 161, 43);
  color: rgb(26, 25, 25);
  text-align: end;
}

.inner-image-top {
  margin-top: 10rpx;
}