@import "./cell/cell.wxss";

.message-tip {
  color: #8f8181;
  font-size: 20rpx;
  height: 40rpx;
  width: 100%;
  text-align: center;
  align-items: center;
  position: fixed;
  top: 20rpx;
}

.comment-area-view {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  z-index: 99;
  box-shadow: 0px 5px 5px 5px #ffffff;
  background-color: #ffffff;

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  padding-top: 15rpx;
}

.comment-button {
  text-align: left;
  font-size: 28rpx;
  color: #999999;
  width: 82vw;
  margin-left: 10rpx;
  margin-right: 20rpx;
  background-color:#ffffff;
}

.collect-button {
  font-size: 40rpx;
  color: #B64A48;
}

.share-icon {
  font-size: 40rpx;
  color: #B64A48;
  margin-left: 30rpx;
  position: relative;
}

.share-button {
  position: absolute;
  top: 0;
  bottom: 0;
  left: -10;
  right: 0;
  background-color: rgba(0, 0, 0, 0);
  width: 100rpx;
  height: 100rpx;
}

.comment-input-view {
  z-index: 199;
  position: fixed;
  height: 100%;
  width: 100%;
  bottom: 0rpx;
  top: 0rpx;
  background-color: rgba(0, 0, 0, 0.3);
}

.comment-input-area-view {
  z-index: 200;
  position: fixed;
  height: 1000rpx;
  width: 100%;
  bottom: 0rpx;
  background-color: #ffffff;
  box-shadow: 0px 5px 5px 5px #ffffff;
  color: #383838;
  font-size: 28rpx;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.reply-user-text {
  font-size: 26rpx;
  margin-top: 30rpx;
  width: 94%;
  color: #383838;
}

.comment-input {
  width: 92vw;
  height: 200rpx;
  margin-top: 28rpx;
}

.input-placeholder {
  font-size: 28rpx;
  color: #A9A9A9;
}

.comment-imags-select-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
}

.select-image-button {
  font-size: 50rpx;
  color: #999999;
  margin-left: 20rpx;
}

.send-button {
  margin-right: 20rpx;
  background-color:#B64A48;
  color: white;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  width: 180rpx;
  border-radius: 30rpx;
}


.publish-images {
  width: 94vw;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.publish-image-item {
  position: relative;
}

.delete-button {
  position: absolute;
  top: -0rpx;
  right: 10rpx;
  font-size: 26rpx;
  color: #999999;
}

.publish-image {
  margin-right: 20rpx;
  margin-top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
}

.border-line {
  width: 100%;
  background-color: #e0e0e0;
  height: 1rpx;
  margin-top: 20rpx;
}

.message-list-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  flex: 1;
  width: 100%;
  margin-top: 50rpx;
  margin-bottom: 120rpx;
}

.refresh-icon {
  font-size: 48rpx;
  color: #B64A48;
  margin-left: 30rpx;
  margin-top: 10rpx;
} 