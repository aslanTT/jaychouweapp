.essay-cell {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  min-width: 100%;
  max-width: 100%;
}

.essay-cell-header-view {
  background-color: rgb(250, 250, 250);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items:center;
  width: 100%;
  height: 70rpx;
  max-height: 70rpx;
  overflow: hidden;
}

.hove-header-class {
  opacity: 0.5;
}

.essay-recommend-view {
  display: flex;
  height: 100%;
  max-height: 100%;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-left: 20rpx;
}

.essay-cell-content-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  position: relative;
  width: 100%;
  min-width: 100%;
  border-radius: 8rpx;
}

.hover-class {
  opacity: 0.5;
  /* background-color: #eee; */
}

.essay-image {
  border-radius: 4px;
  width: 100px;
  min-width: 100px;
  max-width: 100px;
  height: 80px;
  min-height: 80px;
  max-height: 80px;
  margin-left: 10rpx;
  margin-top: 10px;
  margin-bottom: 10px;
  background-color: #f2f2f2;
}

.essay-right-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.essay-title {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #3E4A59;
  letter-spacing: 0;
  line-height: 44rpx;
  text-align: left;
  margin: 25rpx;
  margin-bottom: 20rpx;
  margin-right: 10rpx;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;   
}

.essay-desc {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #818e9d;
  text-align: left;
  margin: 20rpx;
  margin-top: -5px;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1;   
}

.recommend-avatar {
  width: 34rpx;
  max-height: 34rpx;
  border-radius: 17rpx;
  margin-right: 10rpx;
}

.recommend-text {
  font-size: 24rpx;
  color: #333333;
  margin-left: 4rpx;
}

.share-button {
  color: #666666;
  font-size: 32rpx;
  border: 10px solid transparent;
}

.read-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
  color: #666666;
}

.relate-button {
  width: 100rpx;
  height: 40rpx;
  color: #818e9d;
  font-size: 26rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 20rpx;
  border: 1rpx #818e9d solid;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}