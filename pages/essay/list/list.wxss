.essay-cell-view {
  width: 100%;
  margin-top: 20rpx;
  /* margin-bottom: 20rpx; */
  background-color: white;
}

.focus-event-view {
  background-color: #efefef;
  width: 100%;
  height: 450rpx;
  border-radius: 4rpx;
  border: 1rpx #e6e6e6 solid;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.focus-event-scroll {
  width: 100%;
  height: 300rpx;
  white-space: nowrap;
  /* flex-wrap: nowrap; */
  margin-top: 30rpx;
}

.focus-event-container {
  width: 300rpx;
  height: 100%;
  display:inline-block;
  margin-left: 10rpx;
  margin-right: 10rpx;
  position: relative;
}

.focus-event-hover-container {
  opacity: 0.8;
}

.focus-event-item {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
  border-radius: 8rpx;
}

.focus-event-image {
  width: 100%;
  max-width: 100%;
  height: 60%;
}

.focus-event-title {
  font-size: 30rpx;
  color: #333;
  max-width: 100%;
  flex-wrap: wrap;
  white-space: pre-wrap;
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;  
}

.focus-event-line {
  margin-top: 30rpx;
  width: 100%;
  height: 1rpx;
  border-bottom:1rpx #ddd dashed;
}

.focus-events-title-view {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.focus-events-title {
  margin-left: 10rpx;
  font-size: 36rpx;
  color: #333;
}

.foucs-events-tag {
  margin-right: 0rpx;
  padding: 0rpx 10rpx;
  background-color: rgb(201, 76, 72);
  color:#efefef;
  font-size: 28rpx;
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
}

.tool-bar {
  line-height: 80rpx;
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
  position: fixed;
  bottom: 50px;
  right: 20px;
  box-shadow: 0px 0px 17px #aaa;
  background-color: #f0f0f0;
  text-align:center;
  align-content: center;
  align-items: center;
}

.fake-button {
  line-height: 80rpx;
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
  position: fixed;
  background-color:rgba(166, 231, 166, 0);
  border-bottom: 50px;
  bottom: 50px;
  right: 20px;
}

.tool-bar-hover {
  background-color: #eeeeee;
}

.load-button-size {
  font-size: 70rpx;
}

swiper {
  height: 200rpx;
}

.banner-image {
  width:750rpx;
  height:200rpx;
