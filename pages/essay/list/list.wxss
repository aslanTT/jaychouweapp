@import "essayCell.wxss";
@import "list.skeleton.wxss";

page {
  background-color: #f0f0f0
}

.title-bar-text {
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 34rpx;
  color: #333333;
}

.title-bar .active {
  font-size: 40rpx;
  color: #008000;
}

.home-section-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
}

.home-top-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: flex-start;
  width: 100%;
  height: 170px;
}

.home-top-line-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: flex-start;
  width: 100%;
}

.home-top-item-view {
  border-radius: 8rpx;
  height: 65px;
  position: relative;
  margin-left: 20rpx;
  margin-top: 20rpx;
  background-color: #e0e0e0;
}

.home-top-item-view-next {
  border-radius: 8rpx;
  height: 50px;
  position: relative;
  margin-left: 20rpx;
  margin-top: 10rpx;
  background-color: #e0e0e0;
}

.item-1 {
  width: 60%;
}

.item-3 {
  width: 30%;
}

.item-next {
  margin-right: 20rpx;
  margin-left: 10rpx;
  flex: 1;
}

.home-top-item-back-view {
  position: absolute;
  filter:blur(9px);
  background-size:contain;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.top-item-title-view {
  position: absolute;
  width: 100%;
  text-align: center;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.top-item-title {
  color: white;
  font-weight: bold;
  font-size: 28rpx;
  text-shadow: 0px 0px 16px #646d75;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;  
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.swiper-container {
  margin-left: 3%;
  width: 94%;
  height: 150px;
  position: relative;
  margin-top: 20rpx;
  border-radius: 10rpx;
  transform: translateY(0);
}

swiper {
  width: 100%;
}

.switch-banner {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #000000;
  opacity: 0.5;
  width: 130rpx;
  height: 50rpx;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.switch-banner text {
  font-size: 24rpx;
  color: white;
}

.index-swiper-banner {
  position: relative;
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
  transform: translateY(0);
}

swiper image {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.swiper-desc {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.45);
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
}

.swiper-desc-text {
  margin-left: 32rpx;
  margin-right: 32rpx;
  color: #fff;
  font-weight: bold;
  font-size: 36rpx;
  text-shadow: 0px 0px 16px #646d75;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;  
}

.search-view {
  width: 100%;
  height: 60rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: white;
  margin-bottom: 0rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.search-border-view {
  margin-left: 20rpx;
  flex:1;
  border:2rpx #e2e2e2 solid;
  border-radius: 8rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.search-placeholder-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.search-placeholder-text {
  color: #999;
  font-size: 28rpx;
  margin-left: 30rpx;
}

.dingyue-icon {
  font-size: 60rpx;
  color: #bbb;
  margin-right: 15rpx;
  margin-left: 10rpx;
}

.header-view {
  width: 100vw;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  background: #f0f0f0;
  height: 32px;
  /* margin-top: 10rpx; */
}

.fix-header {
  position: fixed;
  z-index: 99;
  margin-top:0rpx;
  /* top:50px; */
}

.fix-ajust-top {
  margin-top:35px;
}

.xscroll_bar {
  overflow-y: hidden;
  height: 99%;
  line-height: 99%;
  width: 90vw;
  margin-left: 0;
  white-space: nowrap;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.menu_item {
  text-align: center;
  font-size: 16px;
  color: #7c7c7c;
  display: inline-block;
  height: 32px;
  line-height: 32px;
  padding-left: 10px;
  padding-right: 10px;
  background-color: #f0f0f0;
}

.menu_hover_item {
  background-color:rgba(166, 231, 166, 0.2);
}

.xscroll_bar .active {
  font-size: 18px;
  color: #008000;
}

.menu_item_border {
  border-bottom: 2px #008000 solid;
  width: 100%;
  height: 30px;
}

.dropdown-filter-view {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #F1F1F1;
}

.dropdown-filter-icon {
  width: 44rpx;
  height: 44rpx;
}

