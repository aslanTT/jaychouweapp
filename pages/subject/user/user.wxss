@import "../cell/cell.wxss";

.back-button {
  position: fixed;
  left: 14rpx;
  width: 44rpx;
  height: 44rpx;
  z-index: 20;
}

.header {
  width: 100%;
  height: 400rpx;
  position: relative;
}

.bg-header {
  width:100%;
  height: 400rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.user-avatar {
  position: absolute;
  bottom: -30rpx;
  right: 20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.user-name {
  position: absolute;
  bottom: 20rpx;
  right: 160rpx;
  font-size: 40rpx;
  color: white;
}

.user-sign {
  width: 96%;
  margin-right: 4%;
  margin-top: 50rpx;
  text-align: right;
  font-size: 28rpx;
  color: #999999;
}

.cell-view {
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
