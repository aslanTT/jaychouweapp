@import "./reply/replyCell.wxss";
@import "../audio/audio.wxss";

.container {
  /* margin-bottom: 180rpx; */
  padding-bottom: 180rpx;
  background-color: #F0F0F0;
}

.top-content-view {
  width: 100%;
}

.detail-title {
  margin: 20rpx;
  font-size: 35rpx;
  line-height: 50rpx;
  color: #000000;
}

.detail-content {
  font-size: 33rpx;
  color: #333333;
  line-height: 50rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.detail-owner-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin: 20rpx 0rpx;
  width: 100%;
}

.owner-avater-view {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-left: 20rpx;
}

.owner-nickname-view {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.owner-nickname-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 36rpx;
}

.owner-publish-time {
  font-size: 24rpx;
  color: #999999;
}

.detail-content {
  font-size: 30rpx;
  color: #383838;
  line-height: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.image-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
}

.video-view {
  margin-top: 20rpx;
  width: 100vw;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.detail-image-item {
  max-width:94%;
  margin-top: 20rpx;
  background-color: #e0e0e0;
  border-radius: 8rpx;
}

.comment-view {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.comment-icon {
  font-size: 40rpx;
  color: #999999;
  margin-right: 20rpx;
}

.border-line {
  width: 100%;
  background-color: #e0e0e0;
  height: 2rpx;
  margin-top: 20rpx;
}

.comment-area-view {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  z-index: 99;
  box-shadow: 0px 5px 30px 10px #e2e2e2;
  background-color: white;

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  padding-top: 15rpx;
}

.comment-button {
  text-align: left;
  font-size: 28rpx;
  color: #999999;
  width: 82vw;
  margin-left: 10rpx;
  margin-right: 20rpx;
  background-color: #ffffff;
}

.collect-button {
  font-size: 40rpx;
  color: #B64A48;
  margin-top: 5rpx;
}

.share-icon {
  margin-top: 5rpx;
  font-size: 40rpx;
  color: #B64A48;
  margin-left: 30rpx;
  position: relative;
}

.share-button {
  position: absolute;
  top: 0;
  bottom: 0;
  left: -10;
  right: 0;
  background-color: rgba(0, 0, 0, 0);
  width: 100rpx;
  height: 100rpx;
}

.comment-input-view {
  z-index: 199;
  position: fixed;
  height: 100%;
  width: 100%;
  bottom: 0rpx;
  top: 0rpx;
  background-color: rgba(0, 0, 0, 0.5);
}

.comment-input-area-view {
  z-index: 200;
  position: fixed;
  height: 1000rpx;
  width: 100%;
  bottom: 0rpx;
  background-color: #ffffff;
  box-shadow: 0px 5px 5px 5px #e2e2e2;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.reply-user-text {
  font-size: 36rpx;
  margin-top: 30rpx;
  width: 94%;
  color: #384858;
}

.comment-input {
  width: 92vw;
  height: 200rpx;
  margin-top: 28rpx;
}

.input-placeholder {
  color: #d0d0d0;
  font-size: 32rpx;
}

.comment-imags-select-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 80rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.select-image-button {
  font-size: 50rpx;
  color: #999999;
  margin-left: 20rpx;
}

.select-yuyin-button {
  font-size: 54rpx;
  color: #999999;
  margin-left: 20rpx;
}

.send-button {
  margin-top: 20rpx;
  margin-right: 20rpx;
  background-color:#B64A48;
  color: white;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  width: 180rpx;
  border-radius: 30rpx;
}

.publish-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
}

.publish-images, .publish-voice {
  width: 86vw;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  flex-wrap: wrap;
  margin-left: 10rpx;
  margin-top: 20rpx;
}

.publish-image-item {
  position: relative;
}

.delete-button {
  position: absolute;
  top: -0rpx;
  right: 10rpx;
  font-size: 26rpx;
  color: #999999;
}

.delete-voice-button {
  position: absolute;
  top: -4rpx;
  right: -10rpx;
  font-size: 32rpx;
  color: #999999;
}

.publish-image {
  margin-left: 20rpx;
  margin-top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
}

.reply-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 20rpx;
  width:100%;
}

.report-view {
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
}

.report-button {
  margin-right: 30rpx;
  font-size: 28rpx;
  color: red;
  margin-top: 36rpx;
}

.fix-header {
  position: fixed;
  z-index: 99;
  margin-top:0rpx;
  /* top:50px; */
  box-shadow: 0px 5px 15px -10px #999999;
}

.reply-header-view {
  width: 100%;
  height: 80rpx;
  background-color: #f0f0f0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.reply-header-title-view {
  color: #666666;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.sort-view {
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  height: 100%;
}

.sort-title {
  color: #666666;
  font-size: 24rpx;
}

.sort-icon {
  color: #B64A48;
  font-size: 46rpx;
  margin-right: 2rpx;
}