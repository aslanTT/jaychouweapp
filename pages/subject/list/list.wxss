@import "../cell/cell.wxss";

.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  background-color: #F0F0F0;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  right: 0;
} 

.navigation-bar {
  width: 100%;
  background-color: #B64A48;
  position: fixed;
  top: 0;
  z-index: 99;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.header-title-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-left: 20rpx;
}

.header-title {
  color: #f0f0f0;
  font-size: 28rpx;
}

.notice-icon-view {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-top: 74rpx;
}

.notice-count-icon {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  background-color: red;
  color: white;
  top: -15rpx;
  right: -15rpx;
  text-align: center;
  font-size: 20rpx;
}

.notice-icon {
  color: white;
  font-size: 36rpx;
}

.header {
  background-color: #B64A48;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  height: 100rpx;
  width: 100%;
  position: fixed;
  z-index: 99;
  box-shadow: 0px 5px 15px -10px #999999;
}

.filter-view {
  margin-left: 20rpx;
}

.filter-item {
  margin-right: 36rpx;
  color: #e2e2e2;
  font-size: 30rpx;
}

.filter-item-active {
  color: #ffffff;
  font-size: 36rpx;
}

.publish-icon {
  margin-right: 40rpx;
  color: white;
  font-size: 60rpx;
}

.cell-view {
  width: 100%;
  background-color: #f0f0f0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.activity-view {
  max-width: 100vw;
  min-width: 100vw;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-self: center;
  align-items: center;
  position: relative;
}

.activity-image {
  border-radius: 8rpx;
  height: 290rpx;
  width: 100%;
}

.activity-desc {
  position: absolute;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 101%;
  background: rgba(0,0,0,0.45);
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
}

.activity-desc-text {
  margin-left: 32rpx;
  margin-right: 32rpx;
  color: #ffffff;
  font-weight: bold;
  font-size: 32rpx;
}

.link-view {
  background-color: #C2C2C2;
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.link-icon {
  font-size: 30rpx;
  color: #020202;
}