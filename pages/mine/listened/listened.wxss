
@import "listened.skeleton.wxss";

.essay-log-cell-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  background: white;
  margin-top: 2rpx;
}

.essay-log-cell {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 220rpx;
}

.essay-left-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  flex:1;
  margin-left:20rpx;
}

.essay-log-cover {
  width: 160rpx;
  min-width: 160rpx;
  max-width: 160rpx;
  height: 120rpx;
  min-height: 120rpx;
  max-height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.essay-log-title {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #3E4A59;
  letter-spacing: 0;
  line-height: 44rpx;
  text-align: left;
  margin: 25rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2; 
}

.essay-log-author {
  font-size: 30rpx;
  line-height: 40rpx;
  color: #818e9d;
  text-align: left;
  margin: 20rpx;
  margin-top: -2px;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1; 
}