
.music-cell {
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  min-width: 100%;
}

.music-content-cell {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.cell-left-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.music-title {
  margin:20rpx;
  font-size: 30rpx;
  color: #383838;
}

.music-album {
  font-size: 26rpx;
  color: #999999;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.cell-right-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 40rpx;
}

.music-num {
  font-size: 46rpx;
  color: #999999;
  /* color: goldenrod; */
}

.music-num-desc {
  font-size: 26rpx;
  color: #d0d0d0;
  margin-left: 10rpx;
  margin-top:8rpx;
}

.select-button {
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #B64A48;
  display: flex;
  flex-direction: row;
  justify-self: center;
  align-items: center;
}

.select-button-title {
  font-size: 26rpx;
  color: white;
  text-align: center;
  width: 100%;
}

.border-line {
  color: #f0f0f0;
  background-color: #f0f0f0;
  width: 100%;
  height: 2rpx;
}
