
.back-icon {
  font-size: 42rpx;
  color: white;
  margin-left: 20rpx;
}

.background_img { 
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  filter: blur(20px);
  z-index: -2;
  transform: scale(1.5); 
}

.album-top-view {
  margin-top: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}

.album-left-view {
  display: inline;
  margin-left: 80rpx;
  width: 240rpx;
  height: 240rpx;
}


.album-cover-bg {
  width: 210rpx;
  height: 210rpx;
  border-radius: 105rpx;
  position: absolute;
  background-color: black;
}

.album-cover {
  position: relative;
  left: -20rpx;
  right: -20rpx;
  bottom: -30rpx;
  width: 240rpx;
  height: 240rpx;
  border-radius: 12rpx;
}

.album-info-view {
  /* margin-left: 10rpx; */
  margin-top: 40rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  flex: 1;
}

.album-name {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  letter-spacing: 8rpx;
}

.singer-name {
  font-size: 24rpx;
  color: #fefefe;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
}

.publish-time {
  font-size: 24rpx;
  color: #fefefe;
}

.album-desc-view {
  height: 70rpx;
  margin-top: 10rpx;
  position: relative;
}

.right-icon {
  position: absolute;
  right: 0rpx;
  bottom: 6rpx;
  right: 20rpx;
  font-size: 30rpx;
  color: #fefefe;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: -1;
}

.album-desc {
  font-size: 24rpx;
  color: #fefefe;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;
}

.desc-container-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;

  margin-top: 140rpx;
}

.desc-scroll-view {
  margin: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  max-height: 82vh;
  max-width: 92%;
  font-size: 28rpx;
  color: #fefefe;
}

.song-view-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-left: 30rpx;
}

.album-song-view {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  margin-bottom: 60rpx;
}

.song-item-view {
  display: flex;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  background-color: #6e6a6a3f;
  border-radius: 8rpx;
}

.item-info-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-left: 30rpx;
  margin-top: 20prx;
  margin-bottom: 20rpx;
}

.index-view {
  font-size: 36rpx;
  color:white;
  font-weight: bold;
  margin-left: 10rpx;
}

.song-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-left: 40rpx;
  margin-top: 20rpx;
}

.song-name {
  font-size: 30rpx;
  color: white;
  margin-right: 20rpx;
}

.song-duration {
  font-size: 24rpx;
  color: white;
  margin-top: 16rpx;
}

.border-line {
  color: #f0f0f0;
  background-color: #f0f0f0;
  width: 100%;
  height: 2rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}