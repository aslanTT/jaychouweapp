@import "./album-cell/cell.wxss";

page {
  background-color: #f0f0f0;
}

.menu-container-view {
  width: 100%;
  height: 196rpx;
  margin-top: 10rpx;
}

.menu-scroll-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.menu-item {
  min-width: 130rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* padding: 14rpx; */
}

.icon-container {
  background-color: white;
  width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.menu-title {
  margin-top: 18rpx;
  font-size: 24rpx;
  color: #818e9d;
}

.menu-album-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.banner-view {
  position: relative;
  height: 300rpx;
  width: 96%;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  background-color: #e0e0e0;
}

.banner-image {
  height: 100%;
  width: 100%;
  border-radius: 8rpx;
}

.banner-image-mask {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: #000000;
  opacity: 0.5;
  border-radius: 8rpx;
  z-index: 9;
}

.banner-image-des {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 10;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.banner-subtitle {
  color: white;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.banner-title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.content-view {
  display: flex;
  /* flex: 1; */
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  min-width: 100%;
  margin-top: 20rpx;
}

.music-cell-view {
  display: flex;
  flex: 1;
  min-width: 100%;
}

.background_img {
  position: fixed;
  z-index: 100;
  bottom: 0;
  height: 50px;
  filter: blur(8px);
  width: 100%;
}

.current-essay-view {
  position: fixed;
  z-index: 101;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  background-color: white;
  box-shadow: 0 0 12rpx rgba(30, 20, 20, 0.1);
  border-bottom: 1rpx solid #efefef;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.current-essay-left-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-left: 20rpx;
  flex: 1;
  position: relative;
}

.current-essay-cover {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  bottom: 10;
  left: 10;
  position: fixed;
  z-index: 101;
}

.play-animation {
  animation: rotate 15s linear infinite ;
  animation-fill-mode: forwards;
}

@keyframes rotate {
  0%{
    transform: rotate(0);
  }
  100%{
    transform: rotate(360deg);
  }
}

.current-essay-title {
  font-size: 30rpx;
  line-height: 40rpx;
  color: #818e9d;
  text-align: left;
  margin-left: 100rpx;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1; 
}

.play-mode-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 2rpx;
  left: 2rpx;
}

.play-icon {
  font-size: 50rpx;
  color: #B64A48;
  margin-right: 20rpx;
}

.play-time {
  font-size: 28rpx;
  color: #818e9d;
}

.current-essay-right-view {
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.ad-banner {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}