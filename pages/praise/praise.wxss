.price {
  font-size: 50rpx;
  display: inline-block;
}

.price-list .price-box-active {
  color: #fff;
  background-color: #ED634F;
  width: 98%;
  height: 100rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ED634F;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}

