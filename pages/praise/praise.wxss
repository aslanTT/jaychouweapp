
.praise-price {
  background-color: white;
  flex:1;
  padding-top: 10px;
}

.circle-view {
  width: 100%;
  height: 400rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.circle {
  width: 99.6%;
  height: 240rpx;
  border: 1px solid #ED634F;
  border-radius: 0 0 60% 60%/0 0 100% 100%;
  border-top: none;
  background-color: #ED634F;
  position: relative;
}

.logo-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 110rpx;
  margin-top:110rpx;
  position: absolute;
  z-index: 100;
}

.app-name {
  font-size: 32rpx;
  color: #333333;
  position: absolute;
  margin-top: 360rpx;
  z-index: 100;
}

.title {
  text-align: center;
  margin-bottom: 50rpx;
  font-size: 30rpx;
}

.price-list {
  padding: 15rpx 15rpx;
  text-align: center;
  flex-direction: row;
}

.price-list .item {
  float: left;
  margin-right: 10rpx;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  width: 220rpx;
}

.price-list .price-box {
  width: 98%;
  height: 100rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ED634F;
  text-align: center;
  line-height: 100rpx;
  color: #d55a4a;
  font-size: 30rpx;
}

